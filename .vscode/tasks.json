{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Demo",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/hk-segment",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${relativeFileDirname}/."]
            }
        },
        {
            "type": "shell",
            "label": "Clean Demo",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/hk-segment"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${relativeFileDirname}/."]
            }
        },
    ]
}
